server {
    listen 443 ssl;
    server_name moviepedia-1.onrender.com;

    ssl_certificate /etc/nginx/ssl/moviepedia.crt; # Replace with your actual SSL cert
    ssl_certificate_key /etc/nginx/ssl/moviepedia.key;

    # Serve React frontend
    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri /index.html;
    }

    # Reverse proxy API requests to the backend
    location /api/ {
        proxy_pass https://movieapiapp-1.onrender.com;
        
        # TLS Fixes
        proxy_ssl_protocols TLSv1.2 TLSv1.3;
        proxy_ssl_server_name on; # Ensure proper SSL name resolution
        proxy_ssl_verify off;     # Temporarily disable SSL verification

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto https;
    }
}
