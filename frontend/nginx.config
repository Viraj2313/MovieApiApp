server {
    listen 80;
    server_name moviepedia-1.onrender.com;

    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri /index.html;
    }

    location /api {
    set $do_not_proxy 0;
    if ($http_x_loop_protection = "true") {
        set $do_not_proxy 1;
    }

    proxy_pass https://movieapiapp-1.onrender.com;
    proxy_redirect off;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Loop-Protection "true";

    proxy_ssl_name $host;
    proxy_ssl_server_name on;
    }
}
